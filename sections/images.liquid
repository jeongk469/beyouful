{% schema %}
    {
      "name": "Featured Products",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
          "default": "Featured Products"
        },
        {
          "type": "number",
          "id": "products_to_show",
          "label": "Number of Products to Show",
          "default": 4
        }
      ],
      "presets": [
        {
          "name": "Featured Products",
          "category": "Products"
        }
      ]
    }
    {% endschema %}
    
    <section class="featured-products">
      <div class="container">
        <h2>{{ section.settings.section_title }}</h2>
        <div class="product-grid">
          {% for product in collections.frontpage.products | limit: section.settings.products_to_show %}
            <div class="product">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
              </a>
              <h3>{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
              <a href="{{ product.url }}" class="button">View Product</a>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>
    
    <style>
    .featured-products {
      padding: 2rem 0;
    }
    .featured-products .product-grid {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }
    .featured-products .product {
      flex: 1 1 calc(25% - 1rem);
      border: 1px solid #ccc;
      padding: 1rem;
      text-align: center;
    }
    .featured-products .product img {
      max-width: 100%;
      height: auto;
    }
    </style>
    