<style>
    .custom-section {
        text-align: center;
    }
    .custom-section img {
        display: block;
        margin: 10px auto; /* Center images and add spacing */
        max-width: 100%; /* Ensure images fit within the container width */
        height: auto; /* Maintain aspect ratio */
    }
</style>

<div class="custom-section">
    {% assign number_of_pics = product.metafields.custom.number_of_detail_pics %}
    {% assign product_name = product.title | replace: ' ', '_' | append: "_detail" %}
    {% for i in (1..number_of_pics) %}
        <img src="{{ product_name | append: i | append: '.jpg' | file_url }}" alt="Image Description">
    {% endfor %}
</div>

{% schema %}
{
    "name": "Custom section",
    "settings": [],
    "presets": [{"name": "Default custom section"}]
}
{% endschema %}